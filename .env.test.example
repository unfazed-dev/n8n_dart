# n8n Integration Test Environment Variables
# Copy this file to .env.test and fill in your values
# DO NOT commit .env.test with real credentials!

# n8n Cloud Configuration
N8N_BASE_URL=https://kinly.app.n8n.cloud
N8N_API_KEY=your-api-key-here

# Test Workflow Webhook IDs (to be created on n8n cloud)
# Simple webhook workflow (no wait nodes) - responds immediately
N8N_SIMPLE_WEBHOOK_ID=simple-test-webhook

# Wait node workflow - includes form fields and wait for user input
N8N_WAIT_NODE_WEBHOOK_ID=wait-node-test-webhook

# Slow workflow - takes longer to execute (for timeout testing)
N8N_SLOW_WEBHOOK_ID=slow-workflow-webhook

# Error workflow - intentionally fails (for error handling testing)
N8N_ERROR_WEBHOOK_ID=error-test-webhook

# Test Configuration
TEST_TIMEOUT_SECONDS=300
TEST_MAX_RETRIES=3
TEST_POLLING_INTERVAL_MS=2000

# CI/CD Configuration
CI_RUN_INTEGRATION_TESTS=true
CI_SKIP_SLOW_TESTS=false

# Supabase Configuration (for Phase 3 template testing)
# SUPABASE_URL=your-supabase-project-url
# SUPABASE_KEY=your-supabase-anon-key
# SUPABASE_DB_HOST=your-project.supabase.co
# SUPABASE_DB_PASSWORD=your-db-password
